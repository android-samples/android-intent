<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <Button
        android:id="@+id/button1"
        style="@style/CommonButton"
        android:layout_height="wrap_content"
        android:onClick="buttonActivity"
        android:text="アクティビティ" />

    <Button
        android:id="@+id/button2"
        style="@style/CommonButton"
        android:layout_height="wrap_content"
        android:onClick="buttonOtherActivity"
        android:text="他アクティビティ" />

    <Button
        android:id="@+id/button3"
        style="@style/CommonButton"
        android:layout_height="wrap_content"
        android:onClick="buttonBrowser"
        android:text="ブラウザ" />

    <Button
        android:id="@+id/button4"
        style="@style/CommonButton"
        android:layout_height="wrap_content"
        android:onClick="buttonMail"
        android:text="メール" />

    <Button
        android:id="@+id/button5"
        style="@style/CommonButton"
        android:layout_height="wrap_content"
        android:onClick="buttonTel"
        android:text="電話" />

    <Button
        android:id="@+id/button6"
        style="@style/CommonButton"
        android:layout_height="wrap_content"
        android:onClick="buttonAlbum"
        android:text="アルバム" />

    <Button
        android:id="@+id/button7"
        style="@style/CommonButton"
        android:layout_height="wrap_content"
        android:onClick="buttonCamera"
        android:text="カメラ" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_launcher" />

</LinearLayout>
